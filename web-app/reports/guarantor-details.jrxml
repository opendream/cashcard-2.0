	<queryString>
		<![CDATA[(
SELECT distinct
    contract."guarantor1" AS contract_guarantor,
    contract."code" AS contract_code,
    contract."approval_date" AS contract_approval_date,
    contract."loan_amount" AS contract_loan_amount,
    member."firstname" AS member_firstname,
    member."lastname" AS member_lastname
FROM
    "public"."contract" contract
     INNER JOIN "public"."member" member ON contract."member_id" = member."id"
WHERE
    contract."approval_status" = true
AND
    contract."guarantor1" <> ''
AND
(    trim(contract."guarantor1") like $P{guarantor1}
OR
    trim(contract."guarantor2") like $P{guarantor1}
OR
    trim(contract."guarantor1") like $P{guarantor2}
OR
    trim(contract."guarantor2") like $P{guarantor2}
)
ORDER BY
    member."firstname",
    member."lastname",
    contract."approval_date"
)
UNION
(
SELECT distinct
    contract."guarantor2" AS contract_guarantor,
    contract."code" AS contract_code,
    contract."approval_date" AS contract_approval_date,
    contract."loan_amount" AS contract_loan_amount,
    member."firstname" AS member_firstname,
    member."lastname" AS member_lastname
FROM
    "public"."contract" contract
     INNER JOIN "public"."member" member ON contract."member_id" = member."id"
WHERE
    contract."approval_status" = true
AND
    contract."guarantor2" <> ''
AND
(    trim(contract."guarantor1") like $P{guarantor1}
OR
    trim(contract."guarantor2") like $P{guarantor1}
OR
    trim(contract."guarantor1") like $P{guarantor2}
OR
    trim(contract."guarantor2") like $P{guarantor2}
)
ORDER BY
    member."firstname",
    member."lastname",
    contract."approval_date"
)]]>
	</queryString>
